---
import { Image } from "astro:assets";
import TagButton from "./TagButton.astro";

const {
  heroImage,
  title,
  description,
  tags,
  slug,
  route = "/rest",
} = Astro.props;
---

<li
  class="flex md:flex-row flex-col md:items-center justify-center rounded-md bg-base-300 md:max-w-[90%] md:w-[62rem] w-full mx-auto scale-1 hover:scale-105 transition-[scale_250ms] gap-2 p-3"
>
  <Image
    src={heroImage}
    alt={title}
    height={200}
    width={200}
    class="rounded-lg md:w-1/3 w-full"
    loading={`${route === "/blog" ? "eager" : "lazy"}`}
  />
  <div class="flex flex-col w-full">
    <a href={`/blog/${slug}/`}>
      <h2
        class="text-2xl font-bold hover:dark:text-blue-400 hover:text-blue-600 transition-colors duration-200 ease-in-out"
      >
        {title}
      </h2>
    </a>
    <div class="flex flex-row gap-2">
      {tags && tags.map((tag: string) => <TagButton tagName={tag} />)}
    </div>
    <p>{description}</p>

    <div class="flex flex-row gap-2 justify-end">
      <a href={`/blog/${slug}/`} class="btn btn-outline hover:btn-primary">
        Read More
      </a>
    </div>
  </div>
</li>
